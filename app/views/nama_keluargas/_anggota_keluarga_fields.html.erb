<div class="col-lg-12">
  <div class = "nested-fields">
    <div class="row">
      <div class="col-lg-4">
        <%= f.input :nama %>
      </div>
      <div class="col-lg-4">
        <%= f.input :nik %>
      </div>
      <div class="col-lg-4">
        <%= f.input :jenis_kelamin, include_blank: false, collection: AnggotaKeluarga.jenis_kelamins.keys.map { |w| [w.humanize, w] }%>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <%= f.input :tempat_lahir%>
      </div>
      <div class="col-lg-6">
        <%= f.input :tanggal_lahir, start_year: 1901, end_year: Time.now.year, order: [:day, :month, :year]%>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <%= f.input :status_hubungan, include_blank: false, collection: AnggotaKeluarga.status_hubungans.keys.map { |w| [w.humanize, w] }%>
      </div>
      <div class="col-lg-6">
        <%= f.input :status_perkawinan, include_blank: false, collection: AnggotaKeluarga.status_perkawinans.keys.map { |w| [w.humanize, w] }%>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <%= f.input :baptis, include_blank: false, collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
      </div>
      <div class="col-lg-5">
        <%= f.input :sidi, include_blank: false, collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
      </div>
      <div class="col-lg-2">
        <%= link_to_remove_association f , class: "btn btn-sm btn-danger remove-association" do %>
          <i class="fas fa-trash-alt"></i>
        <%end%>  
      </div>
    </div>
  </div>
</div>
    <hr class="divider">