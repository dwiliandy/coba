<div class="col-lg-12">
  <div class = "nested-fields">
    <% if f.object.meninggal?%>
      <div class="row">
        <div class="col-lg-4">
          <%= f.input :nama, disabled:true %>
        </div>
        <div class="col-lg-4">
          <%= f.input :nik, disabled:true %>
        </div>
        <div class="col-lg-4">
          <%= f.input :jenis_kelamin, include_blank: "Pilih :", collection: AnggotaKeluarga.jenis_kelamins.keys.map { |w| [w.humanize, w] }, disabled:true%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :tempat_lahir, disabled:true%>
        </div>
        <div class="col-lg-6">
          <%= f.input :tanggal_lahir, start_year: 1901, end_year: Time.now.year, order: [:day, :month, :year], disabled:true%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :status_hubungan, include_blank: "Pilih :", disabled:true, collection: AnggotaKeluarga.status_hubungans.keys.map { |w| [w.humanize, w] }%>
        </div>
        <div class="col-lg-6">
          <%= f.input :status_perkawinan, include_blank: "Pilih :", disabled:true, collection: AnggotaKeluarga.status_perkawinans.keys.map { |w| [w.humanize, w] }%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :baptis, include_blank: "Pilih :", disabled:true, collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
        </div>
        <div class="col-lg-6">
          <%= f.input :sidi, include_blank: "Pilih :", disabled:true, collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10 col-md-12">
          <%=f.input :tanggal_meninggal, as: :string, disabled:true, :input_html =>{ value: l(f.object.tanggal_meninggal)}%>
        </div>
        <div class="col-lg-2">
          <%= link_to_remove_association f , class: "btn btn-sm btn-danger remove-association" do %>
            <i class="fas fa-trash-alt"></i>
          <%end%>  
        </div>
      </div>
    <%else%>
    <div class="row">
        <div class="col-lg-4">
          <%= f.input :nama %>
        </div>
        <div class="col-lg-4">
          <%= f.input :nik %>
        </div>
        <div class="col-lg-4">
          <%= f.input :jenis_kelamin, include_blank: "Pilih :", collection: AnggotaKeluarga.jenis_kelamins.keys.map { |w| [w.humanize, w] }%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :tempat_lahir%>
        </div>
        <div class="col-lg-6">
          <%= f.input :tanggal_lahir, start_year: 1901, end_year: Time.now.year, order: [:day, :month, :year]%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :status_hubungan, include_blank: "Pilih :", collection: AnggotaKeluarga.status_hubungans.keys.map { |w| [w.humanize, w] }%>
        </div>
        <div class="col-lg-6">
          <%= f.input :status_perkawinan, include_blank: "Pilih :", collection: AnggotaKeluarga.status_perkawinans.keys.map { |w| [w.humanize, w] }%>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-5">
          <%= f.input :baptis, include_blank: "Pilih :", collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
        </div>
        <div class="col-lg-5">
          <%= f.input :sidi, include_blank: "Pilih :", collection: AnggotaKeluarga::BAPTIS_SIDI_OPTIONS%>
        </div>
        <div class="col-lg-2">
          <%= link_to_remove_association f , class: "btn btn-sm btn-danger remove-association" do %>
            <i class="fas fa-trash-alt"></i>
          <%end%>  
        </div>
      </div>
    <%end%>
  </div>
</div>
    <hr class="divider">