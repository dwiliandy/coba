<div class="container">
  
    <%= simple_form_for [:admins, @user] do |f| %>
      <div class="row">
        <div class="col-lg-12 col-md-12">
          <%= f.input :current_password%>
        </div>
        <div class="col-lg-12 col-md-12">
          <%= f.input :password%>
        </div>
        <div class="col-lg-12 col-md-12">
          <%= f.input :password_confirmation %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6 col-md-12">
          <%= f.button :submit, 'Ganti Password', class: "btn btn-info col-12" %>
          </div>
          <div class="col-lg-6 col-md-12">
				  <%= link_to "Cancel", admins_dashboard_path, class: "btn btn-danger col-lg-12"%> 
        </div>
      </div>
    <%end%>
</div>