<div class="container-fluid">  
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%=params[:action].capitalize%> Keluarga</h6>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= simple_form_for [:admins, @nama_keluarga] do |f| %>
            <div class="row">
              <div class="col-lg-6 col-md-12">
                <%= f.input :nama %>
              </div>
              <div class="col-lg-6 col-md-12">
                <%= f.input :nomor_kartu_keluarga %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 col-md-12">
                <%= f.input :kolom, include_blank: "Pilih :", :collection => Kolom.all,:label_method => :nama,
                :value_method => :nama,:label => "Kolom"  %>
              </div>
              <div class="col-lg-6 col-md-12">
                <%= f.input :active, :input_html => { :checked => true } %>
              </div>
              <div class="col-lg-12">
               <h6 class="m-0 font-weight-bold text-primary">Data Anggota Keluarga :</h6>
                <br>
              </div>  
                <div class="col-lg-12">
                  <%= f.simple_fields_for :anggota_keluargas do |anggota|%>
                    <%= render 'anggota_keluarga_fields', f: anggota%>
                  <%end%>
                  <div class="links">
                    <%= link_to_add_association 'Tambah Anggota', f, :anggota_keluargas, class: "btn btn-sm btn-success"%>
                  </div>
                  <br>
              </div>       
            </div>
              <%= f.button :submit, class: "btn btn-info" %>
              <%= link_to "Cancel", admins_nama_keluargas_path, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
